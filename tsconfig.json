{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@/Components/*": ["./src/components/*"],
            "@/Pages/*": ["./src/pages/*"],
            "@/Queries/*": ["./src/queries/*"],
            "@/Images/*": ["./src/images/*"],
            "@/Stores/*": ["./src/stores/*"],
            "@/Styles/*": ["./src/styles/*"],
            "@/Types/*": ["./src/types/*"],
            "@/Hooks/*": ["./src/hooks/*"],
            "@/Helpers/*": ["./src/libs/helpers/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
